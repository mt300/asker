<%- include("partials/header.ejs") %>

<body>
    <%- include("partials/navbar.ejs") %>
    <!-- <%= ask.title %> -->
    <div class="container">
        <div class="card">
            <div class="card-header">
                <h3>Title:</h3>
                <p><%= ask.title %></p>
            </div>
            <div class="card-body">
                <h3>Question:</h3>
                <p><%= ask.question %></p>
            </div>
            <div class="card-footer">
                <form method="POST" action="/response/<%= ask.id %>">

                    <h3>Answer</h3>
                    <label>Response</label>
                    <textarea class="form-control" placeholder="Type your response..." name="body"></textarea>
                    <br>
                    <input type="hidden" name="askID" value="<%= ask.id %>">
                    <button class="btn btn-primary">Send</button>
                </form>
                <hr>
                <h3>Responses:</h3>
                <hr>
                <% response.forEach(res => { %>
                    <div class="card">
                        <div class="card-body">
                            <%= res.body %>
                        </div>
                    </div>
                    <br><br>
                <% }) %>
            </div>
        </div>
    </div>


</body>
<%- include("partials/footer.ejs") %>